IF z > 1 AND y <> q THEN LINE (2 ^ x - 2 ^ (z / 1.5) + 400, 2 ^ y - 2 ^ (z / 1.25) + 100)-(2 ^ x - 2 ^ ((z - 1) / 1.5) + 400, 2 ^ (y + 1) - 2 ^ ((z - 1) / 1.25) + 100)

