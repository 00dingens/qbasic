INPUT "Zahl von 1 bis 10"; q
SCREEN 12
WINDOW (0, 0)-(640, 350)
LINE (200, 100)-(105, 5), 4
LINE (200, 100)-(200, 345), 4
LINE (200, 100)-(635, 100), 4
LINE (400, 100)-(345, 5), 4
LINE (400, 100)-(400, 345), 4
LINE (400, 100)-(835, 100), 4
FOR x = 1 TO q
 FOR y = 1 TO q + 1 - x
  z = q + 1 - x - y
  PSET (2 ^ x - 2 ^ (z / 1.25) + 200, 2 ^ y - 2 ^ (z / 1.25) + 100)
  GOSUB linie
 NEXT y
NEXT x
END

